body,ol,ul,h1,h2,h3,h4,h5,h6,p,th,td,dl,dd,form,fieldset,legend,input,textarea,select{margin:0;padding:0}
body{font:12px;font-family:Verdana,Arial,Helvetica,sans-serif;background:#fff;-webkit-text-size-adjust:100%;}
a{text-decoration:none}
a:hover{text-decoration:underline}
em{font-style:normal}
li{list-style:none}
img{border:0;vertical-align:middle}
table{border-collapse:collapse;border-spacing:0}
p{word-wrap:break-word}

$pink = #d78a99
$dark-bule = #66679f
$light-gray = #808080
$super-light-gray = #f2efe6
$shadow-gray = rgba(0,0,0,.2)
$black = #000000
$blue-green = #0e3688
$light-bule-green = #74eceb

//1px浅色细线
shadow(h, v, blur)
   box-shadow h v blur $shadow-gray
textarea
  border none
input
  border none
.thin-line
  position relative
  border none
  &:after
    content ''
    position absolute
    left 0
    background $light-gray
    width 100%
    height 1px
    -webkit-transform scaleY(0.5)
    transform scaleY(0.5)
    -webkit-transform-origin 0 0
    transform-origin 0 0

